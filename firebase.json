{
  "emulators": {
    "firestore": {
      "port": 8080,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 4000,
      "host": "127.0.0.1"
    }
  },
  "hosting": {
    "site": "idea-evolution",
    "public": "idea/static",
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "idea-evolution",
          "region": "us-central1"
        }
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}